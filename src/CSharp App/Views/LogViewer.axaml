<UserControl
    x:Class="VolumetricSelection2077.Views.LogViewer"
    x:DataType="views:LogViewer"
    xmlns="https://github.com/avaloniaui"
    xmlns:controls="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
    xmlns:resources="clr-namespace:VolumetricSelection2077.Resources"
    xmlns:views="clr-namespace:VolumetricSelection2077.Views"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid RowDefinitions="Auto,*">
        <StackPanel
            Grid.Row="0"
            Margin="0,0,5,5"
            Orientation="Horizontal">
            <Button
                Background="#6b82b2"
                Click="OpenLogFolder_Click"
                Height="32"
                Margin="0,0,5,0"
                Width="32">
                <controls:SymbolIcon Symbol="OpenFolder" />
                <Button.Styles>
                    <Style Selector="Button:pointerover /template/ ContentPresenter">
                        <Setter Property="Background" Value="#455472" />
                    </Style>
                </Button.Styles>
            </Button>
            <Button
                Background="#ad0002"
                Click="ClearLog_Click"
                Height="32"
                Margin="0,0,5,0"
                Width="32">
                <controls:SymbolIcon Symbol="ClearFormatting" />
                <Button.Styles>
                    <Style Selector="Button:pointerover /template/ ContentPresenter">
                        <Setter Property="Background" Value="DarkRed" />
                    </Style>
                </Button.Styles>
            </Button>
            <TextBlock
                Margin="0,0,5,0"
                Text="{x:Static resources:Labels.AutoScroll}"
                VerticalAlignment="Center" />
            <ToggleSwitch
                IsChecked="{Binding AutoScroll}"
                Margin="0,0,5,0"
                OffContent=""
                OnContent="" />
        </StackPanel>
        <ScrollViewer
            Background="#0e1117"
            Grid.Row="1"
            HorizontalScrollBarVisibility="Auto"
            Name="LogScrollViewer">
            <ListBox
                Background="Transparent"
                BorderThickness="0"
                ItemsSource="{Binding LogMessages}"
                Margin="0"
                Name="LogListBox"
                Padding="0"
                SelectionMode="Single">

                <ListBox.Styles>
                    <Style Selector="ListBoxItem">
                        <Setter Property="Padding" Value="0" />
                        <Setter Property="Margin" Value="0" />
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="Template">
                            <ControlTemplate>
                                <ContentPresenter
                                    Content="{TemplateBinding Content}"
                                    ContentTemplate="{TemplateBinding ContentTemplate}"
                                    Margin="0"
                                    Padding="0" />
                            </ControlTemplate>
                        </Setter>
                    </Style>
                    <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter">
                        <Setter Property="Background" Value="Transparent" />
                    </Style>
                    <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
                        <Setter Property="Background" Value="Transparent" />
                    </Style>
                    <Style Selector="ListBoxItem:selected:focus /template/ ContentPresenter">
                        <Setter Property="Background" Value="Transparent" />
                    </Style>
                </ListBox.Styles>

                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel Margin="0" />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <SelectableTextBlock
                            FontFamily="Cascadia Code, Consolas, Courier New, Monospace"
                            Margin="0"
                            Text="{Binding Text}"
                            TextWrapping="Wrap">
                            <SelectableTextBlock.Foreground>
                                <Binding Converter="{StaticResource LogLevelColorConverter}" Path="Level" />
                            </SelectableTextBlock.Foreground>
                        </SelectableTextBlock>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </ScrollViewer>
    </Grid>
</UserControl>